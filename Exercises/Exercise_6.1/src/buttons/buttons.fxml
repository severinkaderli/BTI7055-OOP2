<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0"
          prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="buttons.ButtonController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Button fx:id="aButton" alignment="CENTER" contentDisplay="CENTER" minWidth="75.0" mnemonicParsing="false"
                onAction="#handleAClick" text="A" textAlignment="CENTER" GridPane.halignment="CENTER"
                GridPane.valignment="CENTER"/>
        <Button fx:id="bButton" alignment="CENTER" contentDisplay="CENTER" minWidth="75.0" mnemonicParsing="false"
                onAction="#handleBClick" text="B" textAlignment="JUSTIFY" GridPane.columnIndex="1"
                GridPane.halignment="CENTER"/>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.halignment="CENTER" GridPane.rowIndex="1"
              GridPane.valignment="CENTER">
            <children>

                <Label text="A = "/>
                <Label fx:id="aLabel" text="0"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
                <Label text="B = "/>
                <Label fx:id="bLabel" text="0"/>
            </children>
        </HBox>
    </children>
</GridPane>
